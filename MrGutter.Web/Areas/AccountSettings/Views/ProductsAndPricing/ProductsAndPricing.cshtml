@{
    Layout = "_Layout_AccountSetting";
    ViewBag.Title = "Products And Pricing";
}
<div class="flex-shrink-1 container-fluid flex-grow-1 container-p-x container-p-y pt-0">
    <div class="layout-demo-wrapper">
        <div class="layout-demo-placeholder">
            <div class="row">
                <div class="col-12">
                    <span>
                        <h5 class="mb-0 mt-2"><strong>Products & Pricing</strong></h5>  <label>
                            (Upload your team's price list to save time and ensure consistent pricing).
                        </label>
                    </span>
                </div>

                <div class="card mt-3">
                    <!-- Account -->
                    <div class="card-body pt-4">
                        <div class="row">
                            <h6 class="mb-0"><strong>Profit settings</strong></h6>
                            <div class="col-9 mt-2">
                                <label class="mb-0">SumoQuote assumes a 33% margin for products that are not linked to your team's price list.</label>
                            </div>
                            <div class="col-1 text-end">
                            </div>
                            <div class="col-2 text-end">
                                <a type="button" href="/AccountSettings/ProductsAndPricing/ProfitSettings" class="btn btn-label-info waves-effect">Edit</a>
                            </div>
                        </div>
                        <div class="row mt-3"><hr />
                            <h6 class="mb-0"><strong>Products & Pricing</strong></h6>
                            <div class="card mt-3">
                                <div class="card-body">
                                    <div class="row">
                            <div class="col-9 mt-1">
                                <label class="mb-0"><strong>Product List (default pricing)</strong></label>
                            </div>
                            <div class="col-1 text-end">
                            </div>
                            <div class="col-2 text-end">
                                            <a href="/AccountSettings/ProductsAndPricing/DefaultProductList"><i class="fa fa-edit"></i></a>
                            </div>
                            </div>
                            <hr />
                            <div class="row">
                                    <div class="col-8 mt-1">
                                        <label class="mb-0"><strong>Additional price lists</strong></label>
                                    </div>
                                    <div class="col-1 text-end">
                                    </div>
                                    <div class="col-3 text-end">
                                            <button type="button" data-bs-toggle="modal"
                                                    data-bs-target="#modalCenter" class="btn btn-label-primary waves-effect">
                                                Create Price List
                                            </button>
                                    </div>
                                    </div>
                                    <div class="row mt-3">
                                        <div class="col-8">
                                            <i class="drag-handle cursor-move ti ti-menu-2 align-text-bottom me-2"></i>
                                            <label>ABC (Price list name)</label>
                                        </div>
                                        <div class="col-4 text-end">
                                            <a href="/AccountSettings/ProductsAndPricing/EditPriceList" class="btn btn-sm btn-text-secondary rounded-pill btn-icon item-edit" >
                                                <i class="ti ti-lg ti-edit-circle me-2"></i> <!-- Edit icon -->
                                            </a>
                                            <button data-bs-toggle="modal"
                                                    data-bs-target="#deleteProjectList" class="btn btn-sm btn-text-danger rounded-pill btn-icon item-delete">
                                                <i class="ti ti-lg ti-trash-filled text-danger me-2"></i> <!-- Delete icon -->
                                            </button>
                                        </div>

                                    </div>
                                    <hr />
                                    <div class="row mt-5">
                                        <div class="col-8 mt-1">
                                            <label class="mb-0"><strong>More options</strong></label>
                                        </div>
                                        <div class="col-1 text-end">
                                        </div>
                                        <div class="col-3 text-end">
                                        </div>
                                    </div>
                                    <div class="row mt-3">
                                        <div class="col-3">
                                            <i class="fas fa-download"></i> <a href="#">Download Price List</a>
                                        </div>
                                        <div class="col-3">
                                            <i class="fas fa-upload"></i> <a href="#">Upload Price List</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </div>

        </div>
    </div>
</div>
<div class="modal fade" id="modalCenter" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalCenterTitle">Name your new price list</h5>
          
                <button type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>
            <div class="ms-4">
            <span class="ms-1 pt-1">Create a name that will help you identify your new price list.</span>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col mb-4">
                        <h5 for="nameWithTitle" class="form-label">Price list name</h5>
                        <input type="text"
                               id="nameWithTitle"
                               class="form-control"
                               />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-label-secondary" data-bs-dismiss="modal">
                    Close
                </button>
                <button type="button" class="btn btn-primary">Continue</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteProjectList" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalCenterTitle">Do you want to delete this price list?</h5>

                <button type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="">
                    <span class=" pt-2">This price list is not used in any layouts. Once this price list is deleted you will be unable to use it in the future.</span>
                    <span class="pt-2">Any report using this price list will not be affected</span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-label-secondary" data-bs-dismiss="modal">
                    Close
                </button>
                <button type="button" class="btn btn-danger">Delete</button>
            </div>
        </div>
    </div>
</div>