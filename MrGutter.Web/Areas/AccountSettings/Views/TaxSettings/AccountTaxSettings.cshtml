@{
    Layout = "_Layout_AccountSetting";
    ViewBag.Title = "AccountSettingsPDFs";
}



<div class="container-xxl flex-grow-1 container-p-y">

    <div class="flex-shrink-1 container-fluid flex-grow-1 container-p-x container-p-y">

        <div class="layout-demo-wrapper align-items-start">
            <div class="layout-demo-placeholder w-100">
                <div class="row">
                    <div class="col-12">
                        
                        <h5 class="mb-1">
                            <b>Tax Settings</b>
                        </h5>

                        <p class="mb-6 fs-5">You can define two types of taxes to be added to all quotes. Changes you make below will be applied to all new quotes generated by your team.</p>

                        <div class="card mb-6">

                            <div class="card-body pt-4">

                                <div class="col-md-12 mt-5">
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="ti ti-search ti-md me-2 me-lg-0 ti-lg"></i>
                                        </span>
                                        <input type="search" class="form-control" placeholder="Search by Name or Rate" name="Search" />
                                    </div>
                                    <div class="mt-2 mb-8 mt-5">

                                        <a data-bs-toggle="modal"
                                           data-bs-target="#modalCenter"
                                           href="#"
                                           class="btn bg bg-white text-black border waves-effect">
                                            Add new tax item
                                        </a>
                                    </div>
                                </div>

                              

                                <hr class="mt-4"/>

                            </div>

                        </div>



                    </div>

                </div>

                <!--Vertical modal start-->
                <div class="modal fade" id="modalCenter" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                               
                                <button type="button"
                                        class="btn-close"
                                        data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                            </div>
                            <div class="modal-body">

                                <div class="d-flex justify-content-center align-items-center">
                                    <div class="container-xxl flex-grow-1 container-p-y">
                                        <h4 class="mb-4">Create new tax item</h4>

                                        <div class="mt-4">
                                            <label for="taxName"><h5 class="mb-1"><b>Tax Name</b></h5></label>
                                            <input id="taxName" class="form-control" />
                                        </div>

                                        <div class="mt-4  col-md-3">
                                            <label for="taxRate"><h5 class="mb-1"><b>Tax Rate(%)</b></h5></label>
                                            <input id="taxRate" class="form-control" />
                                        </div>

                                        <div class="mt-4">
                                            <h5 class="mb-4"><b>Is this tax Required?</b></h5>
                                            <input type="checkbox" class="me-1" /> Required. Automatically include on all quotes.
                                        </div>



                                      

                                    </div>

                                </div>


                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-label-secondary" data-bs-dismiss="modal">
                                    Close
                                </button>
                                <button type="button" class="btn btn-primary">Save changes</button>
                            </div>
                        </div>
                    </div>
                </div>



              
             

                <!--Vertical modal end-->
            </div>
        </div>
    </div>

</div>

