@{
    Layout = "_Layout_EditReportLayoutSetting";
    ViewBag.Title = "layout Report";
}
<div class="container-xxl flex-grow-1 container-p-y">

    @* <div class="layout-demo-wrapper">
    <div class="layout-demo-placeholder"> *@
    <div class="row">
        <div class="col-12">
            @* <h6>Page Content</h6> *@
            <button type="button" class="btn btn-outline-warning waves-effect" data-bs-toggle="modal" data-bs-target="#orderLayoutSettingModel">
                Layout Setting
            </button>
            <div class="d-flex justify-content-between mb-1">
                <h5 class="">
                    Title <a href="#" title="Edit the page title"><i class="ti ti-edit"></i></a>
                </h5>
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-outline-primary waves-effect">View Page</button>
            </div>

            <div class="card">
                <!-- Account -->
                <div class="card-body pt-4">
                    <form id="formAccountSettings" method="GET" onsubmit="return false">
                        <div class="row">
                            <div class="mb-4 col-6">
                                <label for="reporttype" class="form-label">Order type</label>
                                <input class="form-control"
                                       type="text"
                                       id="reporttype"
                                       name="reporttype"
                                       autofocus />
                            </div>
                            <div class="mb-4 col-6">
                                <label for="date" class="form-label">Date</label>
                                <input class="form-control" type="date" name="date" id="lastName" />
                            </div>

                            <div class="mb-4 col-6">
                                <label for="organization" class="form-label">First Name</label>
                                <input type="text"
                                       class="form-control"
                                       id="organization"
                                       name="organization"
                                       value="Pixinvent" />
                            </div>
                            <div class="mb-4 col-6">
                                <label class="form-label" for="phoneNumber">Last Name</label>
                                <div class="input-group input-group-merge">
                                    <span class="input-group-text">US (+1)</span>
                                    <input type="text"
                                           id="phoneNumber"
                                           name="phoneNumber"
                                           class="form-control"
                                           placeholder="202 555 0111" />
                                </div>
                            </div>
                            <div class="mb-4 col-6">
                                <label for="address" class="form-label">Address</label>
                                <input type="text" class="form-control" id="address" name="address" placeholder="Address" />
                            </div>
                            <div class="mb-4 col-6">
                                <label for="state" class="form-label">City</label>
                                <input class="form-control" type="text" placeholder="California" />
                            </div>
                            <div class="mb-4 col-6">
                                <label for="state" class="form-label">State</label>
                                <input class="form-control" type="text" placeholder="California" />
                            </div>
                            <div class="mb-4 col-6">
                                <label for="zipCode" class="form-label">Zip Code</label>
                                <input type="text"
                                       class="form-control"
                                       placeholder="231465"
                                       maxlength="6" />
                            </div>
                        </div>
                        <div class="mt-2">
                            <button type="submit" class="btn btn-primary me-3">Save changes</button>
                            <button type="reset" class="btn btn-label-secondary">Cancel</button>
                        </div>
                    </form>
                    <div class="row d-flex justify-content-center gx-0 gy-4 g-lg-5 mb-5 pb-md-5">
                        <!-- Basic  -->
                        <div class="card mb-6">
                            <div class="row">
                                <div class="col-6">
                                    <h5 class="card-header">Company Logo</h5>
                                    <div class="card-body d-flex justify-content-center">
                                        <form action="/upload" class="dropzone needsclick w-60" id="dropzone-basic">
                                            <div class="dz-message needsclick">
                                                Drop files here or click to upload
                                                <span class="note needsclick">
                                                    (This is just a demo dropzone. Selected files are
                                                    <span class="fw-medium">not</span> actually uploaded.)
                                                </span>
                                            </div>
                                            <div class="fallback">
                                                <input name="file" type="file" />
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /Basic  -->
                    </div>
                </div>
                <!-- /Account -->
            </div>

        </div>
    </div>


    <!-- Vertically Centered Modal -->
    <!-- Modal -->
    <div class="modal fade" id="orderLayoutSettingModel" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalCenterTitle">Order layout setting</h5>
                    <button type="button"
                            class="btn-close"
                            data-bs-dismiss="modal"
                            aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col mb-4">
                            <label for="nameWithTitle" class="form-label">Layout Name</label>
                            <input type="text"
                                   id="nameWithTitle"
                                   class="form-control"
                                   placeholder="Enter Layout Name" />
                        </div>
                    </div>
                    <div class="row g-4">
                        <div class="col mb-0">
                            <div class="input-group">
                                <div class="input-group-text">
                                    <input class="form-check-input mt-0"
                                           type="checkbox"
                                           value=""
                                           aria-label="Checkbox for following text input" />
                                </div>

                                <label class="form-control">Share layout with all users</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-label-secondary" data-bs-dismiss="modal">
                        Close
                    </button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>



    @*  </div>
    </div> *@
</div>
