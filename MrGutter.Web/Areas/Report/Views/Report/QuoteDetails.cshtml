                                                                const sectionsContainer = document.getElementById("sectionsContainer");

                                                                // Create new section
                                                                const newSection = document.createElement("div");
                                                                newSection.classList.add("section-item", "mb-4");

                                                                // Add <hr> element after section title
                                                                const hr = document.createElement("hr");
                                                                newSection.appendChild(hr); // This places the <hr> after the section title

                                                                // Add section title
                                                                const sectionTitle = document.createElement("h5");
                                                                sectionTitle.textContent = "Section Title";

                                                                // Create a span for the clickable arrows
                                                                const arrowSpan = document.createElement("span");
                                                                arrowSpan.textContent = "🔼 🔽"; // Add the arrows (up and down)

                                                                // Make the span clickable by adding a click event
                                                                arrowSpan.style.cursor = "pointer";  // Inline style to make it clickable

                                                                // Toggle the arrows when clicked
                                                                arrowSpan.addEventListener("click", function () {
                                                                    if (arrowSpan.textContent === "🔼 🔽") {
                                                                        arrowSpan.textContent = "🔽 🔼";  // Swap arrows
                                                                    } else {
                                                                        arrowSpan.textContent = "🔼 🔽";  // Reset to original
                                                                    }
                                                                });

                                                                // Append the arrow span to the section title
                                                                sectionTitle.appendChild(arrowSpan);

                                                                // Append the section title to the new section
                                                                newSection.appendChild(sectionTitle);

                                                                // Add row with search bar, delete icon, and switch
                                                                const row = document.createElement("div");
                                                                row.classList.add("row", "align-items-center");

                                                                // Search bar column
                                                                const searchColumn = document.createElement("div");
                                                                searchColumn.classList.add("col-6");
                                                                searchColumn.innerHTML = `
                                                                                                                                                                                    <div class="input-group input-group-merge">
                                                                                                                                                                                        <input type="text" class="form-control" placeholder="Search..."/>
                                                                                                                                                                                    </div>`;
                                                                row.appendChild(searchColumn);

                                                                // Delete icon column
                                                                const deleteColumn = document.createElement("div");
                                                                deleteColumn.classList.add("col-5", "text-start");
                                                                deleteColumn.innerHTML = `
                                                                                                                                                                                    <a href="#" class="delete-button" title="Delete Section"
                                                                                                                                                                                       data-bs-toggle="modal" data-bs-target="#deleteAsSection">
                                                                                                                                                                                       <i class="ti ti-lg ti-trash-filled text-danger"></i>
                                                                                                                                                                                    </a>`;
                                                                row.appendChild(deleteColumn);

                                                                // Checkbox column
                                                                const checkboxColumn = document.createElement("div");
                                                                checkboxColumn.classList.add("col", "text-end", "form-check", "form-switch");
                                                                checkboxColumn.innerHTML = `<input type="checkbox" class="form-check-input" />`;
                                                                row.appendChild(checkboxColumn);

                                                                // Append row to the new section
                                                                newSection.appendChild(row);

                                                                // Add items container
                                                                const itemsContainer = document.createElement("div");
                                                                itemsContainer.classList.add("items-container");
                                                                newSection.appendChild(itemsContainer);

                                                                // Add margin-top before "Add Item" button
                                                                const addItemButton = document.createElement("button");
                                                                addItemButton.type = "button";
                                                                addItemButton.classList.add("btn", "btn-outline-primary", "mt-3");
                                                                addItemButton.innerHTML = `<i class="ti ti-plus"></i> Add Item`;
                                                                addItemButton.onclick = function () {
                                                                    addItem(itemsContainer);
                                                                };
                                                                newSection.appendChild(addItemButton);

                                                                // Attach the delete button event to open modal and set section to delete
                                                                deleteColumn.querySelector("a").addEventListener("click", function (event) {
                                                                    event.preventDefault(); // Prevent default anchor action (navigation)
                                                                    sectionToDelete = newSection; // Store the section to be deleted
                                                                });

                                                                // Append the new section to the sections container
                                                                sectionsContainer.appendChild(newSection);

                                                                // Show the hidden item template in the new section
                                                                addItem(itemsContainer); // Adds the first item automatically
                                                            };

                                                            // Function to add a new item to the section
                                                            window.addItem = function (itemsContainer) {
                                                                const itemTemplate = document.querySelector(".item-template");

                                                                // Create and append a new item
                                                                const newItem = itemTemplate.cloneNode(true);
                                                                newItem.classList.remove("d-none");
                                                                itemsContainer.appendChild(newItem);

                                                                // Handle the delete button for the item
                                                                newItem.querySelector("[data-repeater-delete]").addEventListener("click", function (event) {
                                                                    event.preventDefault();
                                                                    newItem.remove(); // Remove the specific item when the delete button is clicked
                                                                });
                                                            };

