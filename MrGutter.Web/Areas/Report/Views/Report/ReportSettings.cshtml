 @{
    Layout = "_Layout_Blank";
    ViewData["Title"] = "ReportTitle";
}

<div class="card position-relative">
    <div class="card-body">
        <!-- Close Button at Top Left of the Card -->
        <button class="btn btn-secondary position-absolute top-0 start-0 m-3">
            <i class="bi bi-x-circle"></i> Close
        </button>

    </div>
</div>

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="container-xxl flex-grow-1 container-p-y">
        <h3 class="mb-1">Report Settings</h3>
        <h6>Configure controls for this report</h6>

        <div class="card py-6">
            <div class="card-body">

                <div>
                    <h6 class="mb-1">Layout</h6> <!-- Reduced bottom margin -->
                    <p class="mb-2">
                        This report is using <b>Default Layout.</b>
                        <a href="#" class="text-decoration-underline">Choose a different layout</a>
                    </p>
                </div>
                <div class="my-4">
                    <h6 class="mb-1">Pricing</h6>
                    <p class="mb-3">This layout references the following price list</p>

                    <div class="col-md-6" user_role">
                        <select id="1" class="form-select text-capitalize">
                            <option value="Admin">Default Price List</option>
                        </select>

                    </div>
                </div>

                <div>
                    <h6 class="mb-1">Financing Options</h6>
                    <hr class="my-1" />

                    <div class="d-flex justify-content-between align-item-center">
                        <span class="pt-3">Financing enabled</span>
                        <div class="p-3 pe-6 ms-auto">
                            <!-- Added 'ms-auto' here -->


                            <label class="switch">
                                <input type="checkbox" class="switch-input" />
                                <span class="switch-toggle-slider">
                                    <span class="switch-on" id="with-title"></span>
                                    <span class="switch-off"></span>
                                </span>

                            </label>
                        </div>
                    </div>

                    <hr class="my-3" />
                </div>


                <button class="btn btn-primary position-absolute bottom-0 start-0 mb-3 ms-3">
                    <i class="bi bi-save"></i> Save
                </button>
            </div>

        </div>

    </div>

</div>
 



