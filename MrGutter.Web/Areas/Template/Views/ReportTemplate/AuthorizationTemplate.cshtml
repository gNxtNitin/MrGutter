@{
    Layout = "_Layout_AccountSetting";
    ViewBag.Title = "Template Authorization";
}


<div class="flex-shrink-1 container-fluid flex-grow-1 container-p-x">

    <div class="layout-demo-wrapper">
        <div class="layout-demo-placeholder w-100">
            <div class="row">
                <div class="col-12">
                    <h5 class="mb-0">Edit Template</h5>
                    <div class="row">
                        <div class="col-8">
                            <h6 class="mb-0">
                                <span id="title-text">
                                    (Sample) Interior/Exterior Painting
                                </span>
                            </h6>
                        </div>

                        <div class="col-4 text-end">
                            <a href="/Template/ReportTemplate/ReportTemplateList" class="btn btn-outline-secondary waves-effect">Back</a>
                            <a href="/Template/ReportTemplate/ReportTemplateList" class="btn btn-outline-success waves-effect">Save Changes</a>
                        </div>
                    </div>
                    <div class="card mb-6 mt-3">
                        <!-- Account -->
                        <div class="card-body pt-4">
                            <form id="formAccountSettings" method="GET" onsubmit="return false">
                                <div class="row">
                                    <div class="col mb-4">
                                        <h6 class="mb-0">
                                            <span id="title-text">Template Name</span>
                                        </h6>
                                       
                                        <input type="text"
                                               id="nameWithTitle"
                                               class="form-control"
                                               placeholder="Enter Template Name" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col mb-4">
                                        <div class="card">
                                            <div class="card-body">
                                                <div class="mb-4 col">
                                                    <h5 class="mb-0">
                                                        <span id="title-text">Disclaimer</span>
                                                    </h5>
                                                    
                                                    <label class="form-label">For example, the terms of an estimate, or a direction to the insurer.</label>
                                                    <input type="text" class="form-control"  placeholder="Disclaimer" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col mb-4">
                                        <div class="card">
                                            <div class="card-body">
                                                <div class="mb-4 col">
                                                    <div class="mt-3">
                                                        <h5>Section title</h5>
                                                        <div class="row align-items-center">
                                                            <div class="col-6">
                                                                <div class="input-group input-group-merge">
                                                                    <input type="text" class="form-control" />
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <hr />
                                                        <div class="row mt-3">
                                                            <div class="card-body pt-0 px-0">
                                                                <form class="source-item">
                                                                    <div class="mb-4" data-repeater-list="group-a">
                                                                        <div class="repeater-wrapper mt-2" data-repeater-item>
                                                                            <div class="d-flex border rounded position-relative pe-0">
                                                                                <div class="row w-100 p-6">
                                                                                    <div class="col-md-6 col-12 mb-md-0 mb-4">
                                                                                        <p class="h6 repeater-title">Item</p>
                                                                                        <textarea class="form-control" rows="2" placeholder="Customization & Bug Fixes"></textarea>
                                                                                    </div>
                                                                                    <div class="col-md-3 col-12 mb-md-0 mb-4">
                                                                                        <p class="h6 repeater-title">
                                                                                            Quantity
                                                                                        </p>
                                                                                        <input type="text" class="form-control invoice-item-qty" placeholder="1" min="1" max="50" />
                                                                                    </div>
                                                                                    <div class="col-md-2 col-12 mb-md-0 mb-4">
                                                                                        <p class="h6 repeater-title">Price</p>
                                                                                        <input type="text" class="form-control invoice-item-qty" placeholder="1" min="1" max="50" />
                                                                                    </div>
                                                                                    <div class="col-md-1 col-12 pe-0 mt-md-2">
                                                                                        <p class="h6 repeater-title">Line total</p>
                                                                                        <p class="mb-0 text-heading">$0.00</p>
                                                                                    </div>
                                                                                </div>
                                                                                <div class="d-flex flex-column align-items-center justify-content-between border-start p-2">
                                                                                    <i class="ti ti-lg ti-trash-filled text-danger" data-repeater-delete></i>
                                                                                    <div class="dropdown">
                                                                                        <span class="message-actions input-group-text">
                                                                                            <a data-bs-toggle="modal"
                                                                                               data-bs-target="#textAreaEnabledId1"><i class='ti ti-plus cursor-pointer'></i></a>
                                                                                        </span>

                                                                                        </i>
                                                                                        <div class="dropdown-menu dropdown-menu-end w-px-300 p-4" aria-labelledby="dropdownMenuButton">

                                                                                            <div class="row g-3">
                                                                                                <div class="col-12">
                                                                                                    <label for="discountInput" class="form-label">Discount(%)</label>
                                                                                                    <input type="number" class="form-control" id="discountInput" min="0" max="100" />
                                                                                                </div>
                                                                                                <div class="col-md-6">
                                                                                                    <label for="taxInput1" class="form-label">Tax 1</label>
                                                                                                    <select name="tax-1-input" id="taxInput1" class="form-select tax-select">
                                                                                                        <option value="0%" selected>0%</option>
                                                                                                        <option value="1%">1%</option>
                                                                                                        <option value="10%">10%</option>
                                                                                                        <option value="18%">18%</option>
                                                                                                        <option value="40%">40%</option>
                                                                                                    </select>
                                                                                                </div>
                                                                                                <div class="col-md-6">
                                                                                                    <label for="taxInput2" class="form-label">Tax 2</label>
                                                                                                    <select name="tax-2-input" id="taxInput2" class="form-select tax-select">
                                                                                                        <option value="0%" selected>0%</option>
                                                                                                        <option value="1%">1%</option>
                                                                                                        <option value="10%">10%</option>
                                                                                                        <option value="18%">18%</option>
                                                                                                        <option value="40%">40%</option>
                                                                                                    </select>
                                                                                                </div>
                                                                                            </div>
                                                                                            <div class="dropdown-divider my-4"></div>
                                                                                            <button type="button" class="btn btn-label-primary btn-apply-changes">Apply</button>
                                                                                        </div>
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                    <hr />
                                                                    <div class="row">
                                                                        <div class="col-6">
                                                                            <button type="button" class="btn btn-outline-primary waves-effect" data-repeater-create><i class='ti ti-plus ti-14px me-1_5'></i>Add Item</button>
                                                                        </div>
                                                                    </div>
                                                                </form>
                                                            </div>

                                                        </div>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                        
                                






                                <div class="row">
                                    <div class="col mb-4">
                                        <div class="card">
                                            <div class="card-body">
                                                <div class="mb-4 col-12">
                                                    <h5 class="mb-0">
                                                        <span id="title-text">Insurance Details</span>
                                                        <a href="#" id="edit-title-link">
                                                            <i class="ti ti-edit"></i>
                                                        </a>
                                                    </h5>
                                                    <label class="form-label">Use this section to request project or product details on your authorization page.</label>
                                                   <div class="row">
                                                       <div class="col-6 col-md-6">
                                                            <h6 class="font-weight-bold">Item</h6>
                                                            <div class="col mb-4">
                                                                <input type="text" id="nameWithTitle" class="form-control" placeholder="Ex: Shingle color, etc" />
                                                            </div>
                                                            <div class="col mb-4">
                                                                <input type="text" id="nameWithTitle" class="form-control" placeholder="Ex: Insurance policy, etc" />
                                                            </div>
                                                            <div class="col mb-4">
                                                                <input type="text" id="nameWithTitle" class="form-control" placeholder="" />
                                                            </div>
                                                       </div>
                                                       <div class="col-6 col-md-6">
                                                            <h6 class="font-weight-bold">Selection</h6>
                                                            <div class="col mb-4">
                                                                <input type="text" id="nameWithTitle" class="form-control" placeholder="Can be left blank" />
                                                            </div>
                                                            <div class="col mb-4">
                                                                <input type="text" id="nameWithTitle" class="form-control" placeholder="Can be left blank" />
                                                            </div>
                                                            <div class="col mb-4">
                                                                <input type="text" id="nameWithTitle" class="form-control" placeholder="" />
                                                            </div>
                                                       </div>
                                                   </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col mb-4">
                                        <div class="card">
                                            <div class="card-body">
                                                <div class="mb-4 col">
                                                    <h5 class="mb-0">
                                                        <span id="title-text">Footer Notes</span>
                                                    </h5>
                                                    <textarea id="txtFooterNotes" name="FooterNotes" rows="4" cols="100" class="w-100">
                                                        By signing this form I agree to and confirm the following: I certify that I am the registered owner of the above project property, or have the legal permission to authorize the work as stated. I agree to pay the total project price and understand that this work will be completed in accordance with industry best practices.
                                                        </textarea>
                                                   
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>



                                



                            </form>
                        </div>
                        <!-- /Account -->
                    </div>
                </div>

            </div>
        </div>
    </div>

</div>
