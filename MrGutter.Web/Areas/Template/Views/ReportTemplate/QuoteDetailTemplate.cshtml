                                                                    };
                                                                    newSection.appendChild(addItemButton);

                                                                    // Handle delete section button click event
                                                                    deleteColumn.querySelector("a").addEventListener("click", function (event) {
                                                                        event.preventDefault(); // Prevent default anchor action (navigation)
                                                                        newSection.remove(); // Remove the section when the delete button is clicked
                                                                    });

                                                                    // Append the new section to the sections container
                                                                    sectionsContainer.appendChild(newSection);

                                                                    // Show the hidden item template in the new section
                                                                    addItem(itemsContainer); // Adds the first item automatically
                                                                };

                                                                // Function to add a new item to the section
                                                                window.addItem = function (itemsContainer) {
