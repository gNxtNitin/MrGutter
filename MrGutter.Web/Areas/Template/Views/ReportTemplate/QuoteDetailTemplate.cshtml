                                                                    checkboxColumn.classList.add("col", "text-end", "form-check", "form-switch");
                                                                    checkboxColumn.innerHTML = `<input type="checkbox" class="form-check-input" />`;
                                                                    row.appendChild(checkboxColumn);

                                                                    newSection.appendChild(row);

                                                                    // Add items container
                                                                    const itemsContainer = document.createElement("div");
                                                                    itemsContainer.classList.add("items-container");
                                                                    newSection.appendChild(itemsContainer);

                                                                    // Add margin-top before "Add Item" button
                                                                    const addItemButton = document.createElement("button");
                                                                    addItemButton.type = "button";
                                                                    addItemButton.classList.add("btn", "btn-outline-primary", "mt-3");
                                                                    addItemButton.innerHTML = `<i class="ti ti-plus"></i> Add Item`;
