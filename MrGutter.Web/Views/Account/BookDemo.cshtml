@{
    Layout = "_Layout_Home";
}
<section id="landingReviews" class="section-py bg-body landing-reviews pb-0">
    <div class="container authentication-wrapper authentication-cover">
        <div class="authentication-inner row m-0">
            <!-- /Left Text -->
            <div class="d-none d-lg-flex col-lg-6 p-0">
                <div class="auth-cover-bg-color auth-cover-bg d-flex col-12 col-md-6 col-lg-6 align-items-center p-sm-12 p-6">
                    <div class="w-px-595 mx-auto mt-12">
                        <h1 class="text-primary hero-title display-6 fw-extrabold">Book a free demo with a real human.</h1>

                        <p class="text-start mb-0 mt-1">
                            We'd love to walk you through how we can help you close more deals.
                        </p>
                        <p class="text-start mb-0 mt-1">
                            Fill out the form and choose a time that works for you to connect!
                        </p>

                        <div class="mt-5">
                            <div class="mt-5">
                                <img src="~/image/64406f648f08291dd7770f2f_quote.svg" />
                            </div>
                        </div>
                        <div class="mt-2">
                            <h4 class="text-center mb-1">
                                <span class="position-relative fw-extrabold z-1">
                                    "Sold our first job with Mr. Gutter the other day. Winning the job made Mr. Gutter pay for itself for the year!"

                                </span>
                            </h4>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /Left Text -->
            <!-- Register -->
            <div class="d-flex col-12 col-md-6 col-lg-6 align-items-center authentication-bg p-sm-12 p-6">
                <div class="w-px-700 mx-auto">
                    <form id="formAuthentication" class="mb-6" action="~/" method="POST">
                        <div class="row">
                            <div class="col-md-12 mb-6">
                                <label class="form-label">
                                    First Name:*
                                </label>
                                <input type="text" class="form-control" placeholder=" First Name">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 mb-6">
                                <label class="form-label">
                                    Last Name:*
                                </label>
                                <input type="text" class="form-control" placeholder=" Last Name">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 mb-6">
                                <label class="form-label">
                                    Email:*
                                </label>
                                <input type="text" class="form-control" placeholder="Email">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 mb-6">
                                <label class="form-label">
                                    Phone number:*
                                </label>
                                <input type="text" class="form-control" placeholder="Phone number">
                            </div>
                        </div>

                        <button class="btn btn-primary d-grid w-100 mt-5">
                            Submit
                        </button>
                    </form>

                </div>
            </div>

            <!-- /Register -->
        </div>
    </div>
</section>





