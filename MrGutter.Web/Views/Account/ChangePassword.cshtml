@model MrGutter.Models.ViewModels.ResetPasswordVM
@{
    Layout = "_Layout_Blank";
}
<style>
    #myVideo {
        position: fixed;
        right: 0;
        bottom: 0;
        min-width: 100%;
        min-height: 100%;
    }
    .content-1 {
        position: fixed;
        bottom: 0;
        background: rgba(0, 0, 0, 0.3);
        color: #f1f1f1;
        width: 100%;
        padding: 20px;
        right: 0;
        min-width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100%;
    }
</style>
<div class="container-xxl">
    <div class="authentication-wrapper authentication-basic container-p-y">
        <video autoplay muted loop id="myVideo">
            <source src="~/image/Home-Page-Hero_3-1.mp4" type="video/mp4">
        </video>
        <div class="content-1">
            <div class="authentication-inner py-6">
                <!-- Login -->
                <div class="card">
                    <div class="card-body">
                        <div class="text-center">
                            <img src="~/image/logoblack.png" style="height: 45px;" />
                        </div>
                        <div class="mt-2">
                            <p class="mb-6 mt-3">
                                Enter a new password for
                              
                            </p>
                        </div>

                        <form id="formAuthentication" asp-controller="Account" asp-action="ChangePassword" method="post">
                            <input type="password" id="" class="form-control" asp-for="EmailID" value="@Model.EmailID" hidden/>
                            <div class="mb-6 form-password-toggle">
                                <label class="form-label" for="password">New Password</label>
                                <div class="input-group input-group-merge">
                                 
                                    <input type="password" id="" class="form-control" asp-for="Password" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" aria-describedby="password" />
                                    <span class="input-group-text cursor-pointer"><i class="ti ti-eye-off"></i></span>
                                  
                                </div>
                                <span asp-validation-for="Password" class="text-danger form-label d-flex justify-content-start ps-1"></span>
                            </div>
                            <div class="mb-6 form-password-toggle">
                                <label class="form-label" for="confirm-password">Confirm Password</label>
                                <div class="input-group input-group-merge">
                                    <input type="password" id="" class="form-control" asp-for="ConfirmPassword" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" aria-describedby="password" />
                                </div>
                                <span asp-validation-for="ConfirmPassword" class="text-danger form-label d-flex justify-content-start ps-1"></span>
                                <span class="text-danger form-label d-flex justify-content-start">@ViewBag.error</span>
                            </div>
                            <span class="text-danger form-label d-flex justify-content-start">@ViewBag.ConfirmPassword</span>
                            <button class="btn btn-primary d-grid w-100 mb-6">
                                Set Password
                            </button>
                        </form>
                        <div class="text-center">
                            <a asp-action="ForgotPassword" asp-controller="Account" class="d-flex justify-content-center">
                                <i class="ti ti-chevron-left scaleX-n1-rtl me-1_5"></i>
                                Back
                            </a>
                        </div>

                    </div>
                </div>
                <!-- /Register -->
            </div>
        </div>
    </div>
</div>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var isSuccess = '@TempData["Success"]' === 'True';
        var isError = '@TempData["Error"]' === 'True';
        var successMessage = '@TempData["SuccessMessage"]';
        var errorMessage = '@TempData["ErrorMessage"]';

        var notyf = new Notyf({
            position: {
                x: 'right',
                y: 'top',
            },
            duration: 3000,
            dismissible: true
        });

        if (isSuccess) {
            notyf.success(successMessage);
        }

        if (isError) {
            notyf.error(errorMessage);
        }
    });
</script>