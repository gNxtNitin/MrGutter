@model MrGutter.Models.ViewModels.LoginVM
@{
    Layout = "_Layout_Blank";
}
<style>
    #myVideo {
        position: fixed;
        right: 0;
        bottom: 0;
        min-width: 100%;
        min-height: 100%;
    }

    .content-1 {
        position: fixed;
        bottom: 0;
        background: rgba(0, 0, 0, 0.3);
        color: #f1f1f1;
        width: 100%;
        padding: 20px;
        right: 0;
        min-width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100%;
    }
</style>
<div class="container-xxl">
    <div class="authentication-wrapper authentication-basic container-p-y">
        <video autoplay muted loop id="myVideo">
            <source src="~/image/Home-Page-Hero_3-1.mp4" type="video/mp4">
        </video>
        <div class="content-1">
            <div class="authentication-inner py-6">
                <!-- Login -->
                <div class="card">
                    <div class="card-body">
                        <div class="text-center">
                            <img src="~/image/logoblack.png" style="height: 45px;" />
                        </div>
                        <div class="mt-3">
                            <p class="mb-6">Please enter your email address. We will send you an email to reset your password.</p>
                        </div>

                        <form id="" class="mb-6 mt-5" asp-controller="Account" asp-action="ForgotPassword" method="POST">
                            <div class="mb-6">
                                <label for="email" class="form-label">Email</label>
                                <input type="text" class="form-control" id="email" asp-for="EmailOrMobile" placeholder="Enter your email">
                                <span asp-validation-for="EmailOrMobile " class="text-danger form-label d-flex justify-content-start ps-1"></span>
                            </div>
                            <span class="text-danger form-label d-flex justify-content-start">@ViewBag.errormsg</span>
                            <button class="btn btn-primary d-grid w-100" type="submit">Send Reset Link</button>
                            <p class="text-success d-flex justify-content-start pt-1">@ViewBag.successmsg</p>
                        </form>
                        <div class="text-center">
                            <a asp-action="Index" asp-controller="Account" class="d-flex justify-content-center">
                                <i class="ti ti-chevron-left scaleX-n1-rtl me-1_5"></i>
                                Back to login
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
