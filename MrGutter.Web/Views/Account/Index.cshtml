<header id="masthead" class="site-header hideprint">


    <div class="tool">
        <div class="container wrap">

            <!-- #site-navigation -->

            <div>

                <a href="#" class="fa-brands fa-instagram d-flex" target="_blank" style="height: 40px;"> </a>
            </div>

            <img src="https://www.mrgutter.biz/wp-content/uploads/2023/06/BestPrice.png" alt="Best Price Guarantee" class="best-price">

        </div>
    </div>

    <div class="container wrap">
        <div class="site-header__pad">

            <div class="site-branding">
                <h1 class="site-branding__site-title"><a href="#" rel="home">Mr. Gutter</a></h1>
            </div><!-- .site-branding -->
            <!-- #site-navigation -->

            <div class="button-tool">
                <nav id="button-navigation" class="button-navigation">
                    <div class="menu-button-menu-container">
                        <ul id="button-menu" class="button-menu">
                            <li class="button phone mobhide menu-item menu-item-type-custom menu-item-object-custom menu-item-1226"><a href="tel:413205367451">(413) 536-7451</a></li>
                            <li class="button menu-item menu-item-type-post_type menu-item-object-page menu-item-1227"><a class="loginButton" id="loginButton">Login</a></li>
                        </ul>
                    </div>
                </nav><!-- #site-navigation -->
            </div>


        </div>
    </div>


    <header class="home-video">

        <div class="wrap">
            <div class="bannertitle has-animation animate-in" data-delay="1000">
                <h2 itemprop="title">Safeguard Your <br>Investment with <br>Unparalleled Protection</h2>

                <a href="#features" class="box white down scrollLink">PRODUCTS &amp; SOLUTIONS</a>

            </div>
            <div class="text-end" id="loginForm" style="position:absolute; right:30px; top:10%;min-width: 380px; display:none">
                <div class="content-1">
                    <div class="authentication-inner py-6">
                        <!-- Login -->
                        <div class="card p-5">
                            <div class="card-body">
                                <div class="text-center">
                                    <img src="~/image/logoblack.png" style="height: 45px;" />
                                </div>

                                <form id="" method="POST" asp-controller="Account" asp-action="Login">

                                    <div class="mb-6 mt-3">
                                        <label for="email" class="form-label d-flex justify-content-start">Email or Username</label>
                                        <input type="text" class="form-control" asp-for="EmailOrMobile" placeholder="Enter your email or username">
                                        <span asp-validation-for="EmailOrMobile " class="text-danger form-label d-flex justify-content-start ps-1"></span>
                                    </div>
                                    <div class="mb-6 form-password-toggle">
                                        <label class="form-label d-flex justify-content-start" asp-for="Password">Password</label>
                                        <input type="password" class="form-control" name="password" asp-for="Password" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" aria-describedby="password" />
                                        <span asp-validation-for="Password" class="text-danger form-label d-flex justify-content-start ps-1"></span>
                                    </div>
                                    <div class="my-8">
                                        <div class="d-flex justify-content-between">
                                            <div class="form-check mb-0 ms-2">
                                                <input class="form-check-input" type="checkbox" asp-for="RememberMe">
                                                <label class="form-check-label" for="remember-me">
                                                    Remember Me
                                                </label>
                                            </div>
                                            <a href="#">
                                                <a class="mb-0" asp-action="ForgotPassword" asp-controller="Account">Forgot Password?</a>
                                            </a>
                                        </div>
                                    </div>
                                    <span class="text-danger form-label d-flex justify-content-start">@ViewBag.LoginErrorMsg</span>
                                    <div class="mb-6">
                                        <button class="btn btn-primary d-grid w-100" type="submit">Login</button>
                                    </div>

                                </form>

                            </div>
                        </div>
                        <!-- /Register -->
                    </div>
                </div>
            </div>


        </div>

        <video preload="auto" poster="" class="home-videoplayer has-animation animate-in" data-delay="500" alt="Page banner video" autoplay="" loop="" muted="" playsinline="">
            <source src="https://www.mrgutter.biz/wp-content/uploads/2023/07/Home-Page-Hero_3-1.mp4" type="video/mp4">
            Your browser does not support the video tag.
        </video>

    </header>
</header>
<script>
    var LoginError = '@(ViewBag.LoginError ?? "")';

    document.getElementById('loginButton').addEventListener('click', function () {
        debugger;
        var loginForm = document.getElementById('loginForm');
        if (loginForm.style.display === "none" || loginForm.style.display === "" || LoginError === "Invalid") {
            loginForm.style.display = "block";
        } else {
            loginForm.style.display = "none";
        }
    });
    if (LoginError === "Invalid") {
        var loginForm = document.getElementById('loginForm');
        loginForm.style.display = "block";
    }
</script>






