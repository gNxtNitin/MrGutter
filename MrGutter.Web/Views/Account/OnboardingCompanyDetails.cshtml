<script>
    document.addEventListener("DOMContentLoaded", () => {
        // Select all "Add" buttons
        const addButtons = document.querySelectorAll(".add-btn");

        addButtons.forEach(addButton => {
            // Attach click event to each "Add" button
            addButton.addEventListener("click", function () {
                const removeButton = this.nextElementSibling;

                // Update "Add" button to "Selected"
                this.textContent = "Selected";
                this.classList.replace("btn-primary", "btn-success");
                // this.disabled = true;
                // Enable the "Remove" button
                removeButton.disabled = false;

                // Attach click event to the "Remove" button
                removeButton.addEventListener("click", function () {
                    // Revert "Selected" button back to "Add"
                    addButton.textContent = "Add";
                    addButton.classList.replace("btn-success", "btn-primary");
                    addButton.disabled = false;

                    // Disable the "Remove" button
                    this.disabled = true;
                });
            });
        });
    });
</script>
