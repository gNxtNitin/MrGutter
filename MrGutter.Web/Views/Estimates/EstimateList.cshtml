 <script>
    function filterEstimates() {
        var searchTerm = document.getElementById('searchInput').value.toLowerCase();
        var cards = document.querySelectorAll('.estimate-card');

        cards.forEach(function (card) {
            var cardTitle = card.getAttribute('data-name').toLowerCase();
            var cardEstimateNo = card.getAttribute('data-estimate-no').toLowerCase();

            if (cardTitle.includes(searchTerm) || cardEstimateNo.includes(searchTerm)) {
                card.style.display = ''; // Show the card if search term matches
            } else {
                card.style.display = 'none'; // Hide the card if no match
            }
        });
    }
</script> 
