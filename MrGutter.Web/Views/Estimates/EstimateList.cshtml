    <div class="row mb-12 g-6" id="grid" style="display: flex;">
        @{
            if (Model.EstimateList == null || !Model.EstimateList.Any())
            {
                <div class="row mb-12 g-6 text-center" style="display: flex;">
                    <p>No record found.</p>
                </div>
            }
            else
            {
                @foreach (var item in Model.EstimateList)
                {
                    string estimateCreatedDate = item.EstimateCreatedDate;
                    string formattedDate = "Invalid date format";

                    if (!string.IsNullOrEmpty(estimateCreatedDate))
                    {
                        DateTime createdDate;
                        if (DateTime.TryParse(estimateCreatedDate, out createdDate))
                        {
                            TimeSpan timeDifference = DateTime.Now - createdDate;

                            if (timeDifference.Days > 365)
                            {
                                formattedDate = $"Created {timeDifference.Days / 365} years ago.";
                            }
                            else if (timeDifference.Days > 30)
                            {
                                formattedDate = $"Created {timeDifference.Days / 30} months ago.";
                            }
                            else if (timeDifference.Days > 0)
                            {
                                formattedDate = $"Created {timeDifference.Days} days ago.";
                            }
                            else if (timeDifference.Hours > 0)
                            {
                                formattedDate = $"Created {timeDifference.Hours} hours ago.";
                            }
                            else if (timeDifference.Minutes > 0)
                            {
                                formattedDate = $"Created {timeDifference.Minutes} minutes ago.";
                            }
                            else
                            {
                                formattedDate = $"Created {timeDifference.Seconds} seconds ago.";
                            }
                        }
                    }

                    <div class="col-md-4 estimate-card" data-name="@item.FirstName @item.LastName @item.Addressline1 @item.Addressline2 @item.City @item.State @item.ZipCode @formattedDate" data-estimate-no="@item.EstimateNo">
