<script>
    function updateBackgroundColor(selectElement) {
        var selectedValue = selectElement.value;
        var parentDiv = selectElement.closest('.status-dropdown');
        parentDiv.style.backgroundColor = "";
        parentDiv.style.color = "";
        const statusColors = {
            "5": { backgroundColor: "#008080", color: "#ffffff" },
            "1": { backgroundColor: "#007bff", color: "#ffffff" },
            "2": { backgroundColor: "#90ee90", color: "#ffffff" },
            "6": { backgroundColor: "#ff0000", color: "#ffffff" },
            "4": { backgroundColor: "#ffa500", color: "#ffffff" },
            "3": { backgroundColor: "#008000", color: "#ffffff" }
        };
        if (statusColors[selectedValue]) {
            parentDiv.style.backgroundColor = statusColors[selectedValue].backgroundColor;
            parentDiv.style.color = statusColors[selectedValue].color;
        }
    }
    window.addEventListener('load', function () {
        var selectElements = document.querySelectorAll('.status-dropdown select');
        selectElements.forEach(function (selectElement) {
            updateBackgroundColor(selectElement);
        });
    });
    document.querySelectorAll('.status-dropdown select').forEach(function (selectElement) {
        selectElement.addEventListener("change", function () {
            updateBackgroundColor(selectElement);
        });
    });


    const userStatusDropdown = document.querySelector('.form-selectCreationDate');
    function restoreSelection() {
        const storedValue = sessionStorage.getItem('selectedValue');
        if (storedValue) {
            userStatusDropdown.value = storedValue;
        } else {
            userStatusDropdown.value = 'Created anytime';
        }
        document.getElementById('selectedStatus').textContent = 'Selected: ' + userStatusDropdown.value;
    }
    userStatusDropdown.addEventListener('change', function () {
        const selectedValue = userStatusDropdown.value;
        sessionStorage.setItem('selectedValue', selectedValue);
        document.getElementById('selectedStatus').textContent = 'Selected: ' + selectedValue;
    });
    restoreSelection();



</script>
