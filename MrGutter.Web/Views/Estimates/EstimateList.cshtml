<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Function to update hidden fields based on dropdown selection
        function updateHiddenFields() {
            var estimatorId = document.getElementById('estimatorSelectChange').value;
            var statusId = document.getElementById('userPlan').value;
            var creationStatus = document.getElementById('userStatus').value;

            // Update the hidden fields with selected values
            document.getElementById('hiddenEstimatorId').value = estimatorId;
            document.getElementById('hiddenStatusId').value = statusId;
            document.getElementById('hiddenCreationStatus').value = creationStatus;
        }

        // For estimator selection
        document.getElementById('estimatorSelectChange').addEventListener('change', function () {
            updateHiddenFields();
            document.getElementById('estimatorForm').submit();
        });

        // For user plan (Estimate Status) selection
        document.getElementById('userPlan').addEventListener('change', function () {
            updateHiddenFields();
            document.getElementById('estimatorForm').submit();
        });

        // For user status selection
        document.getElementById('userStatus').addEventListener('change', function () {
            updateHiddenFields();
            document.getElementById('estimatorForm').submit();
        });

        // Clear all filters
        document.getElementById("clearAllBtn").addEventListener("click", function (e) {
            e.preventDefault();

            // Reset select fields
            const estimatorSelect = document.getElementById("estimatorSelectChange");
            const userPlanSelect = document.getElementById("userPlan");
            const userStatusSelect = document.getElementById("userStatus");

            if (estimatorSelect) estimatorSelect.selectedIndex = 0;
            if (userPlanSelect) userPlanSelect.selectedIndex = 0;
            if (userStatusSelect) userStatusSelect.selectedIndex = 0;

            // Reset hidden fields
            document.getElementById('hiddenEstimatorId').value = '0';
            document.getElementById('hiddenStatusId').value = '0';
            document.getElementById('hiddenCreationStatus').value = 'Created anytime';

            // Submit the form with the cleared filters
            document.getElementById('estimatorForm').submit();
        });

        // Initialize hidden fields with the initial values on page load
        updateHiddenFields();
    });


</script>
