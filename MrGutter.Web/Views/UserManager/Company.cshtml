@model MrGutter.Models.ViewModels.CompanyVM
@{
    Layout = "_Layout_Main";
    ViewData["Title"] = "Company";
}


<style>
    /* Flexbox layout for the top section */
    .top {
        display: flex;
        justify-content: space-between; /* Space between left (dropdown) and right (search + button) */
        width: 100%;
        align-items: center;
    }

        /* Align the Show dropdown (length) at the left */
        .top .dataTables_length {
            order: 0; /* Ensure it comes first (left side) */
        }

        /* Right section for search input and buttons */
        .top .right-section {
            display: flex;
            align-items: center; /* Vertically align */
            justify-content: flex-end; /* Align to the right */
        }

        /* Space between the search field and Add button */
        .top .dataTables_filter {
            margin-right: 10px; /* Space between search and button */
        }

        /* Style the button */
        .top .dt-buttons {
            margin-left: 10px; /* Space between buttons */
        }

</style>

<link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
