@model MrGutter.Models.ViewModels.UsersVM

<!DOCTYPE html>
<html>

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 20px;
    }
    h1 {
        color: #333;
    }
    div {
        background-color: #f9f9f9;
        padding: 15px;
        border: 1px solid #ddd;
        border-radius: 5px;
        max-width: 500px;
    }
    p {
        margin: 10px 0;
    }
    a {
        display: inline-block;
        margin-top: 20px;
        color: #007bff;
        text-decoration: none;
    }
    a:hover {
        text-decoration: underline;
    }
</style>


<head>
    <title>User Details</title>
</head>
<body>
    <h1>User Details</h1>

    @if (Model != null)
    {
        <div>
            <p><strong>First Name:</strong> @Model.FirstName</p>
            <p><strong>Last Name:</strong> @Model.LastName</p>
            <p><strong>Email:</strong> @Model.EmailID</p>
            <p><strong>Mobile Number:</strong> @Model.MobileNo</p>
            <p><strong>Username:</strong> @Model.UserName</p>
            <p><strong>Date of Birth:</strong> @Model.DOB</p>
            <p><strong>Company Name:</strong> @Model.CompanyName</p>
        </div>
    }
    else
    {
        <p>No user data found.</p>
    }

    <a href="/">Back to Home</a>
</body>
</html>
